<%-include("../../partials/auth/header.ejs")%>

<body>
    <section id="createaccount">
        <div class="container">
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <h3>Create New Account !!!</h3>
                    <form action="" method="post">
                        <p><%=message%></p>
                        <label for="">First Name</label>
                        <input type="text" name="fname" id="" class="form-control">
                        <label for="">Last Name</label>
                        <input type="text" name="lname" id="" class="form-control">
                        <label for="">Email</label>
                        <input type="text" name="email" id="" class="form-control">
                        <label for="">password</label>
                        <input type="password" name="password" id="" class="form-control">
                        <label for="">DOB</label>
                        <input type="date" name="dob" id="" class="form-control">
                        <label for="">Gender</label>
                        <input type="radio" name="gender" id="" value="male"><label for="male">Male</label>
                        <input type="radio" name="gender" id="" value="female"><label for="female">Female</label>
                        <input type="submit" value="Submit" class="form-control">
                    </form>
                </div> 
                <div class="col-md-4"></div>
            </div>
        </div>
    </section>
</body>